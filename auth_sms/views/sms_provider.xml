<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="view_sms_provider_form" model="ir.ui.view">
        <field name="model">sms.provider</field>
        <field name="arch" type="xml">
            <tree editable="top">
                <field name="sequence" widget="handle" />
                <field name="provider" />
                <field
                    name="api_key"
                    attrs="{'required': [('provider', '=', 'messagebird')]}"
                />
                <field name="active" />
                <button type="object" name="action_send_test" string="Send test SMS" />
            </tree>
        </field>
    </record>
    <record id="action_sms_provider" model="ir.actions.act_window">
      <field name="name">SMS providers</field>
      <field name="res_model">sms.provider</field>
      <field name="view_mode">tree</field>
      <field name="view_id" ref="view_sms_provider_form" />
    </record>
    <menuitem
        id="menu_sms_provider"
        action="action_sms_provider"
        parent="base.menu_custom"
    />
</odoo>
